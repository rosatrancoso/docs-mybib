doi = {10.1098/rsta.1963.0011},
file = {::},
issn = {1364-503X},
journal = {Philosophical Transactions of the Royal Society A: Mathematical, Physical and Engineering Sciences},
month = {apr},
number = {1062},
pages = {505--584},
pmid = {23617029},
title = {{Directional Recording of Swell from Distant Storms}},
volume = {255},
year = {1963}
}
