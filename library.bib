issn = {0894-8755},
journal = {Journal of Climate},
keywords = {Climate variability,Oceanic,Teleconnections,Trends,Wave properties,Waves},
month = {feb},
number = {3},
pages = {641--652},
title = {{Teleconnection Pattern Influence on Sea-Wave Climate in the Bay of Biscay}},
volume = {24},
