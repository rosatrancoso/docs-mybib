author = {Bollmeyer, C. and Keller, J. D. and Ohlwein, C. and Wahl, S. and Crewell, S. and Friederichs, P. and Hense, A. and Keune, J. and Kneifel, S. and Pscheidt, I. and Redl, S. and Steinke, S.},
doi = {10.1002/qj.2486},
issn = {1477870X},
journal = {Quarterly Journal of the Royal Meteorological Society},
number = {686},
title = {{Towards a high-resolution regional reanalysis for the european CORDEX domain}},
volume = {141},
year = {2015}
}
