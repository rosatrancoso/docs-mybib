doi = {10.1016/j.renene.2014.10.024},
isbn = {0960-1481},
issn = {18790682},
journal = {Renewable Energy},
keywords = {Climatology,Inter-annual/seasonal variability,Persistent low wind,Wind integration,Wind power extremes,Wind power ramping},
month = {mar},
pages = {767--778},
title = {{Using reanalysis data to quantify extreme wind power generation statistics: A 33 year case study in Great Britain}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S096014811400651X},
volume = {75},
